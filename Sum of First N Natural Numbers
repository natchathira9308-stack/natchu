import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int N;
        int sum=0;
        N=s.nextInt();
        for(int i=0;i<=N;i++)
        {
            sum+=i;
        }
        System.out.print(sum);
        
    }
}
